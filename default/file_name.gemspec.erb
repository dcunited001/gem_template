# -*- encoding: utf-8 -*-
$:.push File.expand_path("../lib", __FILE__)
require "<%= project %>/version"

Gem::Specification.new do |s|
  s.name        = "<%= project %>"
  s.version     = <%= klass %>::VERSION
  s.platform    = Gem::Platform::RUBY
  s.authors     = ["<%= `git config user.name`.strip %>"]
  s.email       = ["<%= `git config user.email`.strip %>"]
  s.homepage    = "http://github.com/<%= `git config github.user`.strip %>/<%= project %>"
  s.summary     = %q{TODO: add a short summary of the gem}
  s.description = %q{TODO: also add a slightly longer description of the gem}

  s.files         = `git ls-files`.split("\n")
  s.test_files    = `git ls-files -- {test,spec,features}/*`.split("\n")
  s.executables   = `git ls-files -- bin/*`.split("\n").map{ |f| File.basename(f) }
  s.require_paths = ["lib"]

  s.add_development_dependency 'bundler'
  s.add_development_dependency 'minitest'
  s.add_development_dependency 'rcov'
end
